    </profile>
    <profile>
      <id>prod</id>
      <properties>
        <gwtversion>2.1.0</gwtversion>
        <gwt.loglevel>ERROR</gwt.loglevel>
        <gwt.outputstyle>OBF</gwt.outputstyle>
        <gwt.xdisable>true</gwt.xdisable>
        <gwt.soyc>true</gwt.soyc>
      </properties>
    </profile>

